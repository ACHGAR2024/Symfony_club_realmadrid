#random-li {
  /* couleur d'arrière-plan aléatoire */
  background-color: rgb(random(0, 255), random(0, 255), random(0, 255));

  /* couleur de texte basée sur la luminosité relative de la couleur d'arrière-plan */
  color: rgb(
    var(--red),
    var(--green),
    var(--blue)
  ) var(--luminosity) <= 128 ? #fff : #000;

  /* variables pour les valeurs RVB de la couleur d'arrière-plan */
  --red: calc(0.299 * var(--r));
  --green: calc(0.587 * var(--g));
  --blue: calc(0.114 * var(--b));

  /* variables pour la luminosité relative et les valeurs RVB de la couleur d'arrière-plan */
  --luminosity: calc(var(--red) + var(--green) + var(--blue));
  --r: var(--background-color-r);
  --g: var(--background-color-g);
  --b: var(--background-color-b);
}

