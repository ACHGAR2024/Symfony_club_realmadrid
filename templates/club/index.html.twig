{% extends 'dashboard.html.twig' %}

{% block title %}
  Gestion des Sections
{% endblock %}

{% block content %}
  <h1 class="bg-dark text-white p-3 rounded">Gestion des clubs</h1>
  <div class="text-right">
    <a href="{{ path('app_club_new') }}" class="btn btn-success mb-2">Créer un nouveau club</a>
  </div>
  <table class="table table-striped bg-light">
    <thead>
      <tr>
        <th class="bg-dark text-white">Id</th>
        <th class="bg-dark text-white">Logo</th>
        <th class="bg-dark text-white">Nom</th>
        <th class="bg-dark text-white">Description</th>
        <th class="bg-dark text-white">Fondé le</th>

        <th class="bg-dark text-white">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for club in clubs %}
        <tr>
          <td>{{ club.id }}</td>
          <td>
            <img src="../uploads/images/{{ club.logo }}" width="100" />
          </td>
          <td>{{ club.name }}</td>
          <td>{{ club.description }}</td>
          <td>{{ club.founded ? club.founded|date('d/m/Y') : '' }}</td>

          <td>
            <a href="{{ path('app_club_show', { id: club.id }) }}" class="btn btn-primary mt-2">Voir</a>
            <a href="{{ path('app_club_edit', { id: club.id }) }}" class="btn btn-warning mt-2">Modifier</a>
            <a href="{{ path('app_club_delete', { id: club.id }) }}" class="btn btn-danger mt-2">Supprimer</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="6">Aucun enregistrement trouvé</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
