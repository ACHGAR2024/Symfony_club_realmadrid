{% extends 'dashboard.html.twig' %}

{% block title %}
  Gestion des Sections
{% endblock %}

{% block content %}
  <h1 class="bg-dark text-white p-3 rounded">Fiche Club</h1>
  <img src="{{ asset('uploads/images/' ~ club.logo) }}" width="100" class="rounded m-2" />
  <div class="row">
    <div class="col-md-6">
      <table class="table table-striped bg-light">
        <tbody>
          <tr>
            <th class="bg-dark text-white" scope="row">{{ 'Id club'|trans }}</th>
            <td>{{ club.id }}</td>
          </tr>
          <tr>
            <th class="bg-dark text-white" scope="row">{{ 'Nom de club'|trans }}</th>
            <td>{{ club.name }}</td>
          </tr>
          <tr>
            <th class="bg-dark text-white" scope="row">{{ 'Description'|trans }}</th>
            <td>{{ club.description }}</td>
          </tr>
          <tr>
            <th class="bg-dark text-white" scope="row">{{ 'Date de fondation'|trans }}</th>
            <td>{{ club.founded ? club.founded|date('d/m/Y') : '' }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <a href="{{ path('app_club_index') }}" class="btn btn-dark mt-2 mb-2">{{ 'Retour a la liste'|trans }}</a>

  <a href="{{ path('app_club_edit', { id: club.id }) }}" class="btn btn-info mt-2 mb-2">{{ 'Editer'|trans }}</a>

  {{ include('club/_delete_form.html.twig') }}
{% endblock %}
