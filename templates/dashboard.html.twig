<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Dashboard Club</title>
        <meta name="description" content="Bienvenue sur le dashboard du Club Omnisport du Real Madrid" />
        <meta name="keywords" content="Real Madrid, sport, club, omnisport, madrid" />
        <meta name="author" content="Flux RSS Real Madrid" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="Dashboard Club" />
        <meta property="og:description" content="Bienvenue sur le dashboard du Club Omnisport du Real Madrid" />
        <meta property="og:image" content="https://www.realmadrid.com/sites/default/files/styles/large/public/2019-08/RealMadrid_1920x1080.jpg?h=6b85800b&itok=oY3Y8L-r" />
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
        <style>
        #wrapper {
            display: flex;
            align-items: stretch;
        }

        #sidebar-wrapper {
            min-height: 100vh;
            width: 250px;
            background-color: #f8f9fa;
            transition: margin 0.25s ease-out;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-left: 0;
        }

        #page-content-wrapper {
            width: 100%;
        }

        .navbar {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .card {
            margin-bottom: 1rem;
        }

    
    
</style>
    </head>
    <body>
        <div class="d-flex" id="wrapper">
            <!-- Sidebar -->
            <div class="bg-light border-right" id="sidebar-wrapper">
                <a class="navbar-brand ml-2" href=" {{ path('home') }}">
                    <div class="ml-3">
                        <img src="{{ asset('uploads/images/logo.png') }}" width="150">
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_dashboard') }}" {% if app.request.attributes.get('_route') == 'app_dashboard' %} class="list-group-item list-group-item-action bg-primary text-white hover:bg-light " {% else %} class="list-group-item list-group-item-action bg-dark text-white hover:bg-light " {% endif %}>
                            Tableau de bord
                        </a>
                        <a href="{{ path('app_club_index') }}" {% if app.request.attributes.get('_route') == 'app_club_index' %} class="list-group-item list-group-item-action bg-primary text-white hover:bg-light " {% else %} class="list-group-item list-group-item-action bg-dark text-white hover:bg-light " {% endif %}>
                            Les Clubs
                        </a>
                        <a href="{{ path('app_section_index') }}" {% if app.request.attributes.get('_route') == 'app_section_index' %} class="list-group-item list-group-item-action bg-primary text-white hover:bg-light " {% else %} class="list-group-item list-group-item-action bg-dark text-white hover:bg-light " {% endif %}>
                            Les Sections
                        </a>
                        <a href="{{ path('app_team_index') }}" {% if app.request.attributes.get('_route') == 'app_team_index' %} class="list-group-item list-group-item-action bg-primary text-white hover:bg-light " {% else %} class="list-group-item list-group-item-action bg-dark text-white hover:bg-light " {% endif %}>
                            Les Équipes
                        </a>
                        <a href="{{ path('app_member_index') }}" {% if app.request.attributes.get('_route') == 'app_member_index' %} class="list-group-item list-group-item-action bg-primary text-white hover:bg-light " {% else %} class="list-group-item list-group-item-action bg-dark text-white hover:bg-light " {% endif %}>
                            Les Membres
                        </a>
                    </div>
                </div>
                <!-- /#sidebar-wrapper -->
                <!-- Page Content -->
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <spam class="navbar-brand">
                            Espace Dashboard Club
                        </spam>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="{{ asset('uploads/images/' ~ app.user.photo) }}" alt="photo de {{ app.user.email }}" width="40" class="rounded-circle shadow">
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="{{ path('app_user_show', {'id': app.user.id}) }}">
                                            Profile
                                        </a>
                                        <a class="dropdown-item" href="{{ path('app_messages') }}">
                                            Messages
                                        </a>
                                        <a class="dropdown-item" href="{{ path('app_user_index') }}">
                                            Paramètres
                                        </a>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">
                                            Déconnexion
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                    <div class="container-fluid" id="main-content">
                        <div class="container mt-4">
                            {% for label, messages in app.flashes %}
                                <div class="alert alert-{{ label }}">
                                    {% for message in messages %}
                                        <p>
                                            {{ message }}
                                        </p>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                        <!-- Contenu principal -->
                        {% block content %}{% endblock %}
                    </div>
                </div>
            <!-- /#page-content-wrapper -->
            </div>
            <!-- /#wrapper -->
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
        // Toggle the sidebar menu
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        // Function to load pages dynamically
        function loadPage(url) {
            $.ajax({
                url: url,
                method: 'GET',
                success: function(response) {
                    $('#main-content').html(response);
                },
                error: function() {
                    alert('An error occurred while loading the page.');
                }
            });
        }

       

        $(document).ready(function() {
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        });
    </script>
        </body>
    </body>
</html>
