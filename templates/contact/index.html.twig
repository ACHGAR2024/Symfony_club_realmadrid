{% extends 'base.html.twig' %}

{% block title %}Contact service de l'OMNISPORT{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4">
                <div class="card-body">
                    <div class="container p-5" style="border-radius: 25px; box-shadow: inset 8px 8px 8px #cbced1, inset -8px -8px 8px #fff;">
                        {{ form_start(form) }}

                        <div class="form-group">
                            <label for="form_name" style="color: black;">Prénom *</label>
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez entrer votre prénom *'}}) }}
                            <div class="invalid-feedback">{{ form_errors(form.firstName) }}</div>
                        </div>

                        <div class="form-group">
                            <label for="form_lastname" style="color: black;">Nom *</label>
                            {{ form_widget(form.surname, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez entrer votre nom *'}}) }}
                            <div class="invalid-feedback">{{ form_errors(form.surname) }}</div>
                        </div>

                        <div class="form-group">
                            <label for="form_email" style="color: black;">Email *</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez entrer votre email *'}}) }}
                            <div class="invalid-feedback">{{ form_errors(form.email) }}</div>
                        </div>

                        <div class="form-group">
                            <label for="form_need" style="color: black;">Veuillez spécifier votre besoin *</label>
                            {{ form_widget(form.need, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">{{ form_errors(form.need) }}</div>
                        </div>

                        <div class="form-group">
                            <label for="form_message" style="color: black;">Message *</label>
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Écrivez votre message ici.'}}) }}
                            <div class="invalid-feedback">{{ form_errors(form.message) }}</div>
                        </div>

                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-primary">Mettre à jour</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
