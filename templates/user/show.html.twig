{% extends 'dashboard.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block content %}

    <div class="col-md-6 mt-3 mb-3">
        <div class="card rounded shadow">
            <div class="card-body">
                <h5 class="card-header bg-dark text-white">{{ user.getRoles()|join(', ') }}</h5>
                <table class="table table-borderless">
                    <tbody>
                    <tr class="align-middle">
                        <td>
                            {% if user.photo %}
                            <img src="{{ asset('uploads/images/' ~ user.photo) }}" alt="photo de {{ user.email }}" width="50" class="rounded">
                            {% endif %}
                        </td>
                        <td>
                            <ul class="list-unstyled">
                                <li><strong>Id :</strong> {{ user.id }}</li>
                                <li><strong>Email :</strong> {{ user.email }}</li>
                                <li><strong>Roles :</strong> {% if user.roles == ['ROLE_USER'] %}
                                    Compte Utilisateur
                                {% else %}
                                    Compte Administrateur
                                {% endif %}</li>
                            </ul>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="text-right">
                    <a href="{{ path('app_user_index') }}" class="btn btn-dark">back to list</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-info">edit</a>
                </div>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

