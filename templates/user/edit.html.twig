{% extends 'dashboard.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block content %}
<div class="col-md-6 mt-3 mb-3">
    <div class="card rounded shadow">
        <div class="card-body">
            <h5 class="card-header bg-dark text-white">Modifier un utilisateur</h5>
            <br>
                {% if user.photo %}
                <img src="{{ asset('uploads/images/' ~ user.photo) }}" alt="photo de {{ user.email }}" width="50">
            {% endif %}
            <br>
            <table class="table table-borderless">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="text-right">
                    <button class="btn btn-primary text-white mb-2">
                        {{ button_label|default('Sauvegarder') }}
                    </button>
                </div>
                {{ form_end(form) }}
                <div class="text-right">
                    <a href="{{ path('app_user_index') }}" class="btn btn-dark mt-2">
                        Retour Ã  la liste
                    </a>
                </div>
                {{ include('user/_delete_form.html.twig') }}
            </table>
        </div>
    </div>
</div>
{% endblock %}

