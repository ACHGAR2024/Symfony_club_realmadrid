{% extends 'dashboard.html.twig' %}

{% block title %}Gestion des Sections{% endblock %}

{% block content %}
    <h1 class="bg-dark text-white p-3 rounded">Gestion Team</h1>
<div class="text-right mb-2"> <a href="{{ path('app_team_new') }}" class="btn btn-success">Créer une nouvelle équipe</a></div>
    <div class="table-responsive">
        <table class="table table-striped table-hover bg-light">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th> 
                    <th>Photo</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.id }}</td> 
                        <td><img src="../uploads/images/{{ team.photo }}" width="100"></td>
                        <td>{{ team.name }}</td>
                        <td>{{ team.description }}</td>
                        <td>
                            <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                            <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="{{ path('app_team_delete', {'id': team.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

   
{% endblock %}

