{% extends 'dashboard.html.twig' %}

{% block title %}
  Gestion des Sections
{% endblock %}

{% block content %}
  <h1 class="bg-dark text-white p-3 rounded">Carte Équipe</h1>
  <img src="{{ asset('uploads/images/' ~ team.photo) }}" width="100" class="rounded m-2" />
  <table class="table table-striped table-hover mt-5">
    <tbody>
      <tr>
        <th class="bg-dark text-white">Id</th>
        <td>{{ team.id }}</td>
      </tr>
      <tr>
        <th class="bg-dark text-white">Nom</th>
        <td>{{ team.name }}</td>
      </tr>
      <tr>
        <th class="bg-dark text-white">Description</th>
        <td>{{ team.description }}</td>
      </tr>
    </tbody>
  </table>

  <div class="text-center mt-3">
    <a href="{{ path('app_team_index') }}" class="btn btn-dark">Retour à la liste</a>
    <a href="{{ path('app_team_edit', { id: team.id }) }}" class="btn btn-info">Modifier</a>
  </div>

  {{ include('team/_delete_form.html.twig') }}
{% endblock %}
